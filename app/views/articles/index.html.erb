
<h1>Articles</h1>

<h4 style="padding:20px">Our blog has <%= Article.public_count %> articles </h4>

<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to article.title , article %> <i style="color:gray;font-size:11px"> <%= article.author_full_name %> </i>
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path %>
